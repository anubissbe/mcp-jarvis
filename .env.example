# MCP Jarvis Configuration
# Copy this file to .env and adjust the values for your system

# Base directory for MCP installation (defaults to current directory)
MCP_BASE_DIR=./

# Data directory for storing persistent data
MCP_DATA_DIR=./data

# Logs directory
MCP_LOGS_DIR=./logs

# Image Generation API (if using external service)
# Leave commented out to disable image generation
# IMAGE_GEN_API_URL=http://localhost:8000

# Deno installation path (for Python sandbox)
# Leave commented out to use system deno or auto-install
# DENO_PATH=/home/user/.deno/bin/deno

# Allowed paths for filesystem operations (comma-separated)
# Defaults to safe directories if not specified
ALLOWED_PATHS=~/,/tmp,/var/log

# Allowed domains for fetch operations (comma-separated)
ALLOWED_DOMAINS=github.com,githubusercontent.com,npmjs.com,pypi.org,docs.python.org,developer.mozilla.org,react.dev,vuejs.org,angular.io,nodejs.org

# Browser automation settings
PUPPETEER_HEADLESS=true
PUPPETEER_DATA_DIR=./data/puppeteer-profiles

# Node.js memory limit (in MB)
NODE_MEMORY_LIMIT=2048

# Enable debug logging
DEBUG=false